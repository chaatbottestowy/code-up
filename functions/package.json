{
  "name": "CodeUp",
  "description": "Coding trivia on the go",
  "author": "Farah, Jacob, Ken, and Shasha",
  "scripts": {
    "lint": "eslint .",
    "serve": "firebase serve --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "build-css": "node-sass --include-path scss stylesheets/scss/foundation.scss stylesheets/styles.css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\""
  },
  "dependencies": {
    "actions-on-google": "^2.2.0",
    "firebase-admin": "~5.12.1",
    "firebase-functions": "^1.0.3"
  },
  "devDependencies": {
    "eslint": "^4.12.0",
    "eslint-plugin-promise": "^3.6.0",
    "node-sass": "^4.9.0",
    "nodemon": "^1.17.5"
  },
  "private": true
}
